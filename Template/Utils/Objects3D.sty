    \newcommand{\plot}[2]{
        \raiseMessage{Creating new plot [title='#1']}
    \begin{tikzpicture}
    \setGraphic %command to display with frenchb babel
     \begin{axis}[title={#1}, xlabel=x, ylabel=y]
     \addplot3[surf,domain=0:360,samples=50]
     {#2};
     \end{axis}
     \end{tikzpicture}
     }
        